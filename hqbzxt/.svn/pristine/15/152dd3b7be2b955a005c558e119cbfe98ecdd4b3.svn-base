<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yj.hqbz.mapper.menu.MenuDishMapper" >
  <resultMap id="BaseResultMap" type="com.yj.hqbz.model.menu.MenuDish" >
    <id column="DISHID" property="dishid" jdbcType="VARCHAR" />
    <result column="FK_MENUID" property="menuid" jdbcType="VARCHAR" />
    <result column="DISHNAME" property="dishName" jdbcType="VARCHAR" />
    <result column="COOKERID" property="cookerid" jdbcType="VARCHAR" />
    <result column="COOKERNAME" property="cookerName" jdbcType="VARCHAR" />
    <result column="CREATOR" property="creator" jdbcType="VARCHAR" />
    <result column="CREATEDATE" property="createDate" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    DISHID, FK_MENUID, DISHNAME, COOKERID, COOKERNAME, CREATOR, CREATEDATE
  </sql>
  
  <select id="selectByPrimaryKey" parameterType="java.lang.String" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from MENU_DISH
    where DISHID = #{dishid,jdbcType=VARCHAR}
  </select>
  
  <select id="getDishByMenu" parameterType="java.lang.String" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from MENU_DISH
    where FK_MENUID = #{menuid,jdbcType=VARCHAR}
  </select>
  
  <insert id="addDish" parameterType="com.yj.hqbz.model.menu.MenuDish">
  	insert into MENU_DISH(<include refid="Base_Column_List" />)
  	values (#{dishid,jdbcType=VARCHAR},#{menuid,jdbcType=VARCHAR},#{dishName,jdbcType=VARCHAR},
  			#{cookerid,jdbcType=VARCHAR},#{cookerName,jdbcType=VARCHAR},#{creator,jdbcType=VARCHAR},
  			#{createDate,jdbcType=VARCHAR}
  			)
  </insert>
  
  <delete id="deleteDishByMenu" parameterType="java.lang.String">
  	delete from MENU_DISH where FK_MENUID=#{menuid,jdbcType=VARCHAR}
  </delete>
</mapper>