<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yj.hqbz.mapper.system.MessageMapper" >
  <resultMap id="BaseResultMap" type="com.yj.hqbz.model.system.Message" >
    <id column="ID" property="id" jdbcType="DECIMAL" />
    <result column="FK_USERID" property="userid" jdbcType="VARCHAR" />
    <result column="CONTENT" property="content" jdbcType="VARCHAR" />
    <result column="SENDTIME" property="sendTime" jdbcType="TIMESTAMP" />
    <result column="READSTATUS" property="readStatus" jdbcType="DECIMAL" />
    <result column="STATUS" property="status" jdbcType="DECIMAL" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    ID, FK_USERID, CONTENT, SENDTIME, READSTATUS, STATUS
  </sql>
  
  <select id="selectByPrimaryKey" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from MESSAGE
    where ID = #{id,jdbcType=DECIMAL}
  </select>
  
  <select id="getMessageList" resultMap="BaseResultMap">
  	select 
  	<include refid="Base_Column_List" />
  	from MESSAGE
  	where FK_USERID = #{userid,jdbcType=VARCHAR}
  	and STATUS=0
  	<if test="readStatus!=null">
    and READSTATUS = #{readStatus,jdbcType=DECIMAL}
  	</if>
  	order by SENDTIME desc
  </select>
  
  <update id="updateHaveRead" parameterType="java.lang.Integer">
  	update MESSAGE SET READSTATUS=1 where ID = #{id,jdbcType=DECIMAL}
  </update>
  
  <update id="deleteMessage" parameterType="java.lang.Integer">
  	update MESSAGE SET STATUS=1 where ID = #{id,jdbcType=DECIMAL}
  </update>
  
  <insert id="insertMessage" parameterType="com.yj.hqbz.model.system.Message">
  	insert into MESSAGE
  	(<include refid="Base_Column_List" />)
  	values(MESSAGE_SEQ_ID.nextval, #{userid,jdbcType=VARCHAR}, #{content,jdbcType=VARCHAR}, sysdate, 0,0)
  </insert>
  
</mapper>