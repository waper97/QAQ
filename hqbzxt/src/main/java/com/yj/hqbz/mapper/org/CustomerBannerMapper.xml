<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yj.hqbz.mapper.org.CustomerBannerMapper" >
  <resultMap id="BaseResultMap" type="com.yj.hqbz.model.org.CustomerBanner" >
    <id column="ID" property="id" jdbcType="DECIMAL" />
    <result column="FK_ORGID" property="orgid" jdbcType="DECIMAL" />
    <result column="PIC_URL" property="picUrl" jdbcType="VARCHAR" />
    <result column="THUMBNAIL_URL" property="thumbnailUrl" jdbcType="VARCHAR" />
    <result column="LINKURL" property="linkUrl" jdbcType="VARCHAR" />
    <result column="SORTNO" property="sortno" jdbcType="DECIMAL" />
  </resultMap>
  
  <sql id="Base_Column_List" >
    ID, FK_ORGID, PIC_URL, THUMBNAIL_URL, LINKURL, SORTNO
  </sql>
  
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select <include refid="Base_Column_List" />
    from CUSTOMERBANNER
    where ID = #{id,jdbcType=DECIMAL}
  </select>
  
  <insert id="addBanner" parameterType="com.yj.hqbz.model.org.CustomerBanner">
  	insert into CUSTOMERBANNER(<include refid="Base_Column_List"/>)
  	values (CUSTOMERBANNER_SEQ_ID.NEXTVAL,#{orgid,jdbcType=DECIMAL},#{picUrl,jdbcType=VARCHAR},
  			#{thumbnailUrl,jdbcType=VARCHAR},#{linkUrl,jdbcType=VARCHAR},#{sortno,jdbcType=DECIMAL}
  			)
  </insert>
  
  <delete id="deleteBanner" parameterType="java.lang.Integer">
  	delete from CUSTOMERBANNER where FK_ORGID=#{orgid,jdbcType=DECIMAL}
  </delete>
  
  <select id="getBannerByOrg" parameterType="java.lang.Integer" resultMap="BaseResultMap">
  	select <include refid="Base_Column_List" />
  	from CUSTOMERBANNER
  	where FK_ORGID = #{orgid,jdbcType=DECIMAL}
  </select>
</mapper>